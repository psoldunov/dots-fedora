
# Source a file (multi-file configs)
# source = ~/.config/hypr/myColors.conf

# environment variables
# source=~/.config/hypr/environment.conf
# window rules
source=~/.config/hypr/windowrules.conf
# keybinds
source=~/.config/hypr/keybinds.conf
# beauty stuff
source=~/.config/hypr/beauty.conf

# See https://wiki.hyprland.org/Configuring/Monitors/
# monitor =,preferred,auto,1
monitor = HDMI-A-1,highrr,auto,1.2

# See https://wiki.hyprland.org/Configuring/Keywords/ for more

# Execute your favorite apps at launch

exec-once = waybar & hyprpaper
#exec-once = /nix/store/$(command ls -la /nix/store | grep 'polkit-gnome' | grep '4096' | awk '{print $9}' | sed -n '$p')/libexec/polkit-gnome-authentication-agent-1
exec-once = bash -c "$POLKIT_AUTH_AGENT"
exec-once = 1password --silent
exec-once = solaar -w hide
exec-once = blueman-applet
exec-once = nm-applet
#exec-once = mpd
# exec-once = mpDris2
exec-once = spotifyd
# exec-once = dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=Hyprland

#swaylock
exec-once = swayidle -w

# sets xwayland scale
exec-once=xprop -root -f _XWAYLAND_GLOBAL_OUTPUT_SCALE 32c -set _XWAYLAND_GLOBAL_OUTPUT_SCALE 0.8

env = GDK_SCALE,0.8
env = XCURSOR_SIZE,32

env = GTK_THEME,Adwaita:dark

# For all categories, see https://wiki.hyprland.org/Configuring/Variables/
input {
    kb_layout = us,ru
    kb_variant = 
    kb_model =
    kb_options = grp:ctrl_space_toggle, ctrl:swap_lwin_lctl
    kb_rules =

    follow_mouse = 1

    natural_scroll = yes

    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
}

general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 4
    gaps_out = 4
    border_size = 2
    col.active_border = rgba(CFD5D9aa)
    col.inactive_border = rgba(20222Eaa)


    layout = dwindle
}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    rounding = 8
    blur = yes
    blur_size = 3
    blur_passes = 1
    blur_new_optimizations = on

    drop_shadow = yes
    shadow_range = 4
    shadow_render_power = 4
    col.shadow = rgba(1a1a1aee)
}

animations {
    enabled = yes

    # Some default animations, see https://wiki.hyprland.org/Configuring/Animations/ for more

    bezier = myBezier, 0.05, 0.9, 0.1, 1.05

    animation = windows, 1, 7, myBezier
    animation = windowsOut, 1, 7, default, popin 80%
    animation = border, 1, 10, default
    animation = borderangle, 1, 8, default
    animation = fade, 1, 7, default
    animation = workspaces, 1, 6, default
}

dwindle {
    # See https://wiki.hyprland.org/Configuring/Dwindle-Layout/ for more
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = yes # you probably want this
}

master {
    # See https://wiki.hyprland.org/Configuring/Master-Layout/ for more
    new_is_master = true
}

gestures {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more
    workspace_swipe = off
}

# Example per-device config
# See https://wiki.hyprland.org/Configuring/Keywords/#executing for more
device:epic-mouse-v1 {
    sensitivity = -0.5
}

debug {
    overlay = off
}